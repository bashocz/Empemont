<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:Custom="http://schemas.microsoft.com/wpf/2008/toolkit"
	x:Class="Empemont.WindowPageMicrophone"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480">

	<Grid Margin="0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.5*"/>
			<ColumnDefinition Width="0.5*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="32"/>
			<RowDefinition Height="0.5*"/>
			<RowDefinition Height="32"/>
			<RowDefinition Height="0.5*"/>
		</Grid.RowDefinitions>
		<TextBlock HorizontalAlignment="Left" Margin="8,8,0,8" Text="Znělky:" TextWrapping="Wrap"/>
		<Button HorizontalAlignment="Right" Margin="0,4,8,4" Width="75" Content="Přehrát"/>
		<ListBox Margin="8" Grid.Row="1"/>
		<Button x:Name="ButtonStart" Margin="16" Content="START" Grid.Row="1" Grid.Column="1" FontSize="48" Foreground="{DynamicResource SelectedSpeakersAreaBorder}"/>
		<Image Margin="8" Grid.ColumnSpan="2" Grid.Row="2" Grid.RowSpan="2" Source="normal_equalizer-beta.jpg"/>
	</Grid>
</UserControl>