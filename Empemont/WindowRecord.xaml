<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="DialogRecord"
	x:Class="Empemont.WindowRecord"
	Title="Nahrát hlášení"
	Width="640" Height="480" mc:Ignorable="d" ScrollViewer.VerticalScrollBarVisibility="Disabled" WindowStartupLocation="CenterOwner">

	<Grid Background="{DynamicResource WindowBackground}">
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="48"/>
		</Grid.RowDefinitions>
		<Grid x:Name="GridPage" Margin="8">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Button x:Name="ButtonStart" Margin="8,96" Content="START" FontSize="48" Foreground="{DynamicResource SelectedSpeakersAreaBorder}"/>
			<Image Margin="0" Source="normal_equalizer-beta.jpg" Grid.ColumnSpan="2" d:LayoutOverrides="GridBox" Grid.Column="1"/>
		</Grid>
		<Grid Margin="0" Grid.Row="1">
			<Button x:Name="ButtonClose" HorizontalAlignment="Right" Margin="0,8,8,8" Width="75" Height="24" Content="Zavřít" d:LayoutOverrides="HorizontalAlignment"/>
        </Grid>
	</Grid>
</Window>